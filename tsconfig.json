{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "stripInternal": true,
    "skipLibCheck": true,
    "pretty": true,
    "declaration": false,
    "outDir": "dist",
    "inlineSources": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "esModuleInterop": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "test"
  ],
  "include": [
    "src/**/*"
  ]
}
